package layout

import (
    "time"
	"fmt"
)

func dateOnly (timestamp time.Time) string {
    formattedDate := fmt.Sprintf("%d-%d-%d", timestamp.Day(), timestamp.Month(), timestamp.Year())
    return formattedDate
} 

// css ClassName() {
