templ DiaryCard(content string, title string, date time.Time) {
    <li class={ "diary-entry", /*ClassName()*/ }>
        <h3>{ title }</h3>
        <span>{ dateOnly(date) }</span>
        <p>{ content }</p>
    </li>
}
